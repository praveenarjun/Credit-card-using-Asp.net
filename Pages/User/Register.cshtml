@page
@model razorproject.Pages.User.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="flex flex-col justify-center align-center w-full h-full">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">
            Create your Account
        </h1>
    </div>
    <div class="border-b-2 border-blue-600 w-12 mb-6">
    </div>
    <form method="post" id="RegistrationForm">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label class="block text-gray-700 font-semibold mb-2">
                    Username
                </label>
                <input class="w-full p-3 border border-gray-300 rounded-lg" placeholder="Please enter your Username"
                    type="text" asp-for="RegisterViewModel.Username" />
                <span class="text-red-500" asp-validation-for="RegisterViewModel.Username"></span>
            </div>

            <div>
                <label class="block text-gray-700 font-semibold mb-2">
                    Full Name
                </label>
                <input class="w-full p-3 border border-gray-300 rounded-lg" placeholder="Please enter your full name"
                    type="text" asp-for="RegisterViewModel.Fullname" />
                <span class="text-red-500" asp-validation-for="RegisterViewModel.Fullname"></span>
            </div>

            <div>
                <label class="block text-gray-700 font-semibold mb-2">
                    Email
                </label>
                <input class="w-full p-3 border border-gray-300 rounded-lg" placeholder="Email" type="email"
                    asp-for="RegisterViewModel.Email" />
                <span class="text-red-500" asp-validation-for="RegisterViewModel.Email"></span>
            </div>

            <div>
                <label class="block text-gray-700 font-semibold mb-2">
                    Phone number
                </label>
                <div>
                    <input class="w-full p-3 border border-gray-300 rounded-lg"
                        placeholder="Please enter your phone number" type="number"
                        asp-for="RegisterViewModel.PhoneNumber" />
                    <span class="text-red-500" asp-validation-for="RegisterViewModel.PhoneNumber"></span>
                </div>
            </div>

            <div>
                <label class="block text-gray-700 font-semibold mb-2">
                    Password
                </label>
                <input class="w-full p-3 border border-gray-300 rounded-lg" placeholder="Please enter your password"
                    type="password" asp-for="RegisterViewModel.Password" />
                <span class="text-red-500" asp-validation-for="RegisterViewModel.Password"></span>
            </div>

            <div>
                <label class="block text-gray-700 font-semibold mb-2">
                    Confirm password
                </label>
                <input class="w-full p-3 border border-gray-300 rounded-lg" placeholder="Please enter your"
                    type="password" asp-for="RegisterViewModel.ConfirmPassword" />
                <span class="text-red-500" asp-validation-for="RegisterViewModel.ConfirmPassword"></span>
            </div>
        </div>

        <div>
            <div class="form-check d-flex justify-content-center align-items-center mb-5 mt-5">
                <input asp-for="RegisterViewModel.AgreeToTerms" class="form-check-input me-2" type="checkbox" required>
                <span class="form-check-span" asp-validation-for="RegisterViewModel.AgreeToTerms">
                    By checking this box you agree to the terms and conditions
                </span>
            </div>
            <span asp-validation-for="RegisterViewModel.AgreeToTerms" class="text-danger">
            </span>
        </div>

        <div class="mt-8">
            <button class="w-full bg-green-600 text-white p-3 rounded-lg flex items-center justify-center"
                type="submit">
                Register
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}